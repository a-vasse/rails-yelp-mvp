<div class="new-container container mt-4">
  <div class="banner">
  <h3>Add Restaurant</h3>
  </div>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORY, label_method: :capitalize, include_blank: false %>
    <%= f.submit class: 'btn btn-light m-2' %>
    <%= link_to 'Back to Main', restaurants_path, class: 'btn btn-light m-2' %>
  <% end %>
</div>
