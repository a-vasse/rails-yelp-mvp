<div class="banner">
<h1 id="banner-title">Restaureview</h1>
</div>

<div class="container mt-4">
  <div>
    <%= link_to 'Add Restaurant', new_restaurant_path, class:"btn btn-primary mt-2 mb-5" %>
  <div>
</div>

<div class="cards">
  <% @restaurants.each do |restaurant| %>
    <div class="card-product mb-4">
      <%= image_tag("#{restaurant.category}.png") %>
      <div class="card-product-infos">
        <h2 class="restaurant-title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
        <p><%= restaurant.address %></p>
        <p><%= restaurant.category.capitalize %></p>
      </div>
    </div>
  <% end %>
</div>
